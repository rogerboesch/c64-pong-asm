    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "args": ["/C"],
    "tasks": [
        {
            "group": "build",
            "label": "build&run",
            "command": "java -jar ~/RetroTools/kick-assembler/KickAss.jar -odir bin -showmem ${file} && ~/RetroTools/c64/vice/x64sc -drive8type 0 -autostartprgmode 1 -autostart ${workspaceFolder}/bin/pong.prg",
